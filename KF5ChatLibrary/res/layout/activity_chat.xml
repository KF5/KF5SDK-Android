<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bar_bg" >

        <ImageView
            android:id="@+id/return_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/back_img_bg"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textview_agent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:text="@string/ticket"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <com.kf5chat.view.MyListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:cacheColorHint="#0000"
        android:divider="@null"
        android:dividerHeight="@dimen/dimen_32dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="true"
        android:listSelector="@android:color/transparent"
        android:paddingBottom="@dimen/dimen_16dp" />

    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_4dp" >

            <ImageView
                android:id="@+id/chat_by_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dimen_4dp"
                android:layout_marginRight="@dimen/dimen_4dp"
                android:contentDescription="@null"
                android:src="@drawable/chat_by_voice" />

            <RelativeLayout
                android:id="@+id/layout_voice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dimen_2dp"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:layout_weight="1"
                android:background="@drawable/voice_layout_bg"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/voice_hint_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/hold_on_and_say_something"
                    android:textColor="@color/voice_text_color"
                    android:textSize="@dimen/text_size_18" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_edittext_and_emoji"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/input_bar_bg_active"
                android:visibility="visible" >

                <com.kf5chat.emoji.EmojiconEditText
                    android:id="@+id/chat_with_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/chat_by_emoji"
                    android:layout_toStartOf="@+id/chat_by_emoji"
                    android:background="@null"
                    android:gravity="start|center"
                    android:lineSpacingExtra="8dp"
                    android:maxLines="5"
                    android:minHeight="40dp"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:id="@+id/chat_by_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_2dp"
                    android:layout_marginStart="@dimen/dimen_2dp"
                    android:contentDescription="@null"
                    android:src="@drawable/chat_by_emoji" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/chat_by_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:contentDescription="@null"
                android:src="@drawable/chat_by_others"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textview_send_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:background="@drawable/btn_send_bg"
                android:gravity="center"
                android:text="发送"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_16"
                android:visibility="gone" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/layout_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="@dimen/dimen_6dp" >
        </FrameLayout>
    </LinearLayout>

</LinearLayout>