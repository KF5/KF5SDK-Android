<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:maskimage="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.kf5chat.view.CircleImageView
        android:id="@+id/message_item_with_image_head_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:contentDescription="@null"
        android:src="@drawable/icon" />

    <com.kf5chat.view.MaskImage
        android:id="@+id/message_item_with_image_content_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message_item_with_image_head_img"
        android:layout_marginLeft="@dimen/dimen_4dp"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:layout_toEndOf="@+id/message_item_with_image_head_img"
        android:layout_toRightOf="@+id/message_item_with_image_head_img"
        android:scaleType="fitXY"
        maskimage:mask="@drawable/message_from_text_bg_nomal" />

</RelativeLayout>