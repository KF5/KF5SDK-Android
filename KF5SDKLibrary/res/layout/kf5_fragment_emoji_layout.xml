<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.support.v4.view.ViewPager
        android:id="@+id/kf5_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/kf5_dimen_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/kf5_pointImage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kf5_emoji_page_selected" />


            <ImageView
                android:id="@+id/kf5_pointImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/kf5_dimen_6dp"
                android:src="@drawable/kf5_emoji_page_unselected" />

            <ImageView
                android:id="@+id/kf5_pointImage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/kf5_dimen_6dp"
                android:src="@drawable/kf5_emoji_page_unselected" />

            <ImageView
                android:id="@+id/kf5_pointImage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/kf5_dimen_6dp"
                android:src="@drawable/kf5_emoji_page_unselected" />

            <ImageView
                android:id="@+id/kf5_pointImage5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/kf5_dimen_6dp"
                android:src="@drawable/kf5_emoji_page_unselected" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>