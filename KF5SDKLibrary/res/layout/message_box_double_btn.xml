<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <View
        android:id="@+id/dialogDivider2"
        android:layout_width="fill_parent"
        android:layout_height="1.0dp"
        android:layout_marginTop="10.0dip"
        android:background="#34000000" />

    <LinearLayout
        android:id="@+id/btnLayoutDouble"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialogLeftBtn"
            android:layout_width="1dp"
            android:layout_height="44.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/messagebox_double_left_btn"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#ff0079ff"
            android:textSize="16.0sp"
            android:text="OK" />

        <View
            android:layout_width="1.0dp"
            android:layout_height="fill_parent"
            android:background="#34000000" />

        <Button
            android:id="@+id/dialogRightBtn"
            android:layout_width="1dp"
            android:layout_height="44.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/messagebox_double_rigth_btn"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#ff0079ff"
            android:textSize="16.0sp" 
            android:text="Cancel"/>
    </LinearLayout>

</LinearLayout>
