<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dimen_8dp"
    android:paddingTop="@dimen/dimen_8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/message_item_with_date_bg"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_14" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp">

        <com.kf5sdk.view.CircleImageView
            android:id="@+id/message_item_with_text_head_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:contentDescription="@null" />

        <com.kf5sdk.view.EmojiconTextView
            android:id="@+id/message_item_with_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/message_item_with_text_head_img"
            android:layout_marginEnd="@dimen/dimen_32dp"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:layout_toEndOf="@+id/message_item_with_text_head_img"
            android:layout_toRightOf="@+id/message_item_with_text_head_img"
            android:background="@drawable/message_from_with_text_bg"
            android:gravity="start|center"
            android:lineSpacingExtra="6dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_16"></com.kf5sdk.view.EmojiconTextView>
    </RelativeLayout>
</LinearLayout>